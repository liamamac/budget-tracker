<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Records</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <table>
        <tr>
            <th>ID</th>
            <th>Pet ID</th>
            <th>Visit Date</th>
            <th>Visit Type</th>
            <th>Weight</th>
            <th>Cost</th>
            <th>Notes</th>
        </tr>
            {{#records}}
        <tr>
            <td>{{id}}</td>
            <td>{{pet_id}}</td>
            <td>{{visit_date}}</td>
            <td>{{visit_type}}</td>
            <td>{{weight}}</td>
            <td>{{cost}}</td>
            <td>{{notes}}</td>
        </tr>
            {{/records}}    
    </table>
    <a href="/add-record-form" class="btn">Add Record</a><br>
    {{#addrecord}}
    <form action="/add-record" method="post">
        <label for="visit_date">Visit Date</label>
        <input type="text" name="visit_date">
        <br>
        <label for="visit_type">Visit Type</label>
        <input type="text" name="visit_type">
        <br>
        <label for="weight">Weight</label>
        <input type="text" name="Weight">
        <br>
        <label for="cost">Cost</label>
        <input type="text" name="cost">
        <br>
        <label for="notes">Notes</label>
        <input type="text" name="notes">
        <br>
        <button type="submit">Add</button><br>
    </form>
    {{/addrecord}}
</body>
</html>